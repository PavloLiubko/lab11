#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
int main()
{
    setlocale(LC_ALL, "UKR");
    int n1, n2;
    cout << "Введіть кількість елементів першого масиву:";
    cin >> n1;
    cout << endl << "Введіть кількість елементів другого масиву:";
    cin >> n2;

    std::vector<double> arr1;
    std::vector<double> arr2;
    for (int i = 0; i < n1; i++) {
        cout << endl << "Введіть якесь дійсне число для масиву №1:";
        double num;
        cin >> num;
        arr1.push_back(num);
    }
    for (int i = 0; i < n2; i++) {
        cout << endl << "Введіть якесь дійсне число для масиву №2:";
        double num;
        cin >> num;
        arr2.push_back(num);
    }

    int plus1 = 0;
    int plus2 = 0;
    int minus1 = 0;
    int minus2 = 0;

    for (int i = 0; i < n1; i++) {
        if (arr1[i] > 0) {
            plus1 += 1;
        }
        else if (arr1[i] < 0) {
            minus1 += 1;
        }
    }

    for (int i = 0; i < n2; i++) {
        if (arr1[i] > 0) {
            plus2 += 1;
        }
        else if (arr1[i] < 0) {
            minus2 += 1;
        }
    }

    if (plus1 > minus2) {
        if (arr1.size() != arr2.size()) {
            cout << "Операція неможлива, дані масиви мають різну кількість елеменітв";
        }
        else {
            std::vector<double> SumaKv;
            for (int i = 0; i < n1; i++) {
                SumaKv.push_back(pow(arr1[i], 2) + pow(arr2[i], 2));
            }

            cout << endl << "Ваш варіант відповіді:\n";
            for (int i = 0; i < n1; i++) {
                cout << SumaKv[i] << endl;
            }
        }
    }
    else if (plus1 < minus2) {
        if (arr1.size() != arr2.size()) {
            cout << "Операція неможлива, дані масиви мають різну кількість елеменітв";
        }
        else {
            std::vector<double> RizKv;
            for (int i = 0; i < n1; i++) {
                RizKv.push_back(pow(arr1[i], 2) - pow(arr2[i], 2));
            }

            cout << endl << "Ваш варіант відповіді:\n";
            for (int i = 0; i < n1; i++) {
                cout << RizKv[i] << endl;
            }
        }
    }
    else if (plus1 == minus2) {
        if (minus1 > plus2) {
            if (arr1.size() != arr2.size()) {
                cout << "Операція неможлива, дані масиви мають різну кількість елеменітв";
            }
            else {
                std::vector<double> SumaKv;
                for (int i = 0; i < n1; i++) {
                    SumaKv.push_back(pow(arr1[i], 2) + pow(arr2[i], 3));
                }

                cout << endl << "Ваш варіант відповіnді:\n";
                for (int i = 0; i < n1; i++) {
                    cout << SumaKv[i] << endl;
                }
            }
        }
        else if (minus1 < plus2) {
            if (arr1.size() != arr2.size()) {
                cout << "Операція неможлива, дані масиви мають різну кількість елеменітв";
            }
            else {
                std::vector<double> SumaKv;
                for (int i = 0; i < n1; i++) {
                    SumaKv.push_back(pow(arr1[i], 3) + pow(arr2[i], 3));
                }

                cout << endl << "Ваш варіант відповіnді:\n";
                for (int i = 0; i < n1; i++) {
                    cout << SumaKv[i] << endl;
                }
            }
        }
    }


    return 0;
}


