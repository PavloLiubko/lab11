#include <iostream>
#include <ctime>
#include <cstdlib>
#include <vector>
using namespace std;


int main()
{
    setlocale(LC_ALL, "UKR");
    srand(time(NULL));
    
    int n;
    cout << "Введіть кількість елеменітв масиву n:";
    cin >> n;
    cout << "\n";

    std::vector<int> A;

    for (int i = 0; i < n; i++) {
        int randNum = -10 + rand() % 10;
        int znak = 1 + rand() % 2;
        if (znak == 1) {
            randNum *= -1;
        }
        else {
            randNum *= 1;
        }
        A.push_back(randNum);
    }

    cout << "Наш масив з рандомними числами:\n";
    for (int i = 0; i < n; i++) {
        cout << A[i] << endl;
    }

    int plus = 0;
    int minus = 0;
    for (int i = 0; i < n; i++) {
        if (A[i] > 0) {
            plus += 1;
        }
        else if (A[i] < 0) {
            minus += 1;
        }
    }

    if (plus > minus) {
        cout << "У нас " << plus << " додатніх чисел та " << minus << " від'ємних. При цьому додатніх більше";
    }
    else if (plus == minus) {
        cout << "Чисел з різними знаками порівну";
    }
    else {
        cout << "У нас " << plus << " додатніх чисел та " << minus << " від'ємних. При цьому від'ємних більше";
    }
    


    return 0;
}


