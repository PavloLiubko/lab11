#include <iostream>
#include <algorithm>
#include <vector>
using namespace std;
int main()
{
    
    int n;
    cout << "Введіть кількість елементів масиву n:";
    cin >> n;
    
    std::vector<int> A;
    
    for (int i = 0; i < n; i++) {
        A.push_back(i + 1);
    }
    
    cout << "Наш масив:\n";
    for (int i = 0; i < n; i++) {
        cout << A[i] << endl;
    }
    
    std::sort(A.begin(), A.end(), std::greater<int>());
    
    cout << "Наш змінений масив:\n";
    for (int i = 0; i < n; i++) {
        cout << A[i] << endl;
    }
    

    return 0;
}

